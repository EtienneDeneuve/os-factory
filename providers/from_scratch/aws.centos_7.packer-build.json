{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "aws_token": "",
    "build_name": "",
    "build_default_user": "",
    "build_http_directory": "",
    "build_iso_url": "",
    "build_iso_checksum": "",
    "build_guest_os_type": "",
    "build_region": "eu-west-1",
    "playbook_build": "",
    "playbook_roles": "",
    "import_bucket": "",
    "json_output_path": ""
  },

  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 8192,
      "guest_os_type": "{{ user `build_guest_os_type` }}",
      "headless": true,
      "http_directory": "{{ user `build_http_directory` }}",
      "iso_urls": [ "{{ user `build_iso_url` }}" ],
      "iso_checksum_type": "sha256",
      "iso_checksum": "{{ user `build_iso_checksum` }}",
      "guest_additions_mode": "disable",
      "ssh_username": "{{ user `build_default_user` }}",
      "ssh_password": "{{ user `build_default_user` }}",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo 'vagrant'|sudo -S /sbin/halt -h -p",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "512"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "2"
        ]
      ],
      "format": "ova"
    }
  ],
  "provisioners": [
    {
      "type": "ansible",
      "user": "{{ user `build_default_user` }}",
      "playbook_file": "{{ user `playbook_build`}}/play.yml",
      "ansible_env_vars": [ "ANSIBLE_ROLES_PATH={{ user `playbook_roles`}}" ]
    }
  ],
  "post-processors": [
    {
      "type": "amazon-import",
      "region": "{{ user `build_region` }}",
      "s3_bucket_name": "{{ user `import_bucket` }}",
      "license_type": "BYOL",
      "ami_name": "{{ user `build_name` }}",
      "tags": {
        "Description": "packer amazon-import {{timestamp}}"
      }
    },
    {
      "type": "manifest",
      "output": "{{ user `json_output_path` }}"
    }
  ]

}
