{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "aws_token": "",
    "build_name": "",
    "build_default_user": "",
    "build_http_directory": "",
    "build_iso_url": "",
    "build_iso_checksum": "",
    "build_guest_os_type": "",
    "build_region": "eu-west-1",
    "playbook_build": "",
    "playbook_roles": "",
    "import_bucket": "",
    "json_output_path": ""
  },

  "builders": [
    {
      "type": "virtualbox-iso",
      "iso_url": "{{ user `build_iso_url` }}",
      "iso_checksum_type": "md5",
      "iso_checksum": "{{ user `build_iso_checksum` }}",
      "headless": "true",
      "boot_wait": "2m",
      "ssh_username": "{{ user `build_default_user` }}",
      "ssh_password": "{{ user `build_default_user` }}",
      "ssh_wait_timeout": "6h",
      "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
      "guest_os_type": "{{ user `build_guest_os_type` }}",
      "disk_size": "81920",
      "floppy_files": [
        "{{ user `build_http_directory` }}/ks.xml"
      ],
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "4096"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "2"
        ]
      ]
    }
  ],
  "provisioners": [
    {
      "type": "ansible",
      "user": "{{ user `build_default_user` }}",
      "playbook_file": "{{ user `playbook_build`}}/play.yml",
      "ansible_env_vars": [ "ANSIBLE_ROLES_PATH={{ user `playbook_roles`}}" ]
    }
  ],
  "post-processors": [
    {
      "type": "amazon-import",
      "region": "{{ user `build_region` }}",
      "s3_bucket_name": "{{ user `import_bucket` }}",
      "license_type": "BYOL",
      "ami_name": "{{ user `build_name` }}",
      "tags": {
        "Description": "packer amazon-import {{timestamp}}"
      }
    },
    {
      "type": "manifest",
      "output": "{{ user `json_output_path` }}"
    }
  ]

}
